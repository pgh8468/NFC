<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/check_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:id="@+id/check_roomclass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="객실 등급"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsansttfbold"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:gravity="start|center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginStart="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="체크인"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/gmarketsansttfbold"
                        android:gravity="start|center"/>

                    <TextView
                        android:id="@+id/check_checkin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2020-6-17"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:fontFamily="@font/gmarketsansttfmedium"
                        android:layout_marginEnd="8dp"
                        android:gravity="end|center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="체크아웃"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/gmarketsansttfbold"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/check_checkout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:text="2017-6-17"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:fontFamily="@font/gmarketsansttfmedium"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="5dp"
                        android:gravity="end|center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/check_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:fontFamily="@font/gmarketsansttfbold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="원"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/gmarketsansttfbold"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>